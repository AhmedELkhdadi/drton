ta3rif factorial(x){
    ila(x == 0){
        red(1)
    }
    wla{
        red(x * factorial(x-1))
    }
}

num = qra("Entrez un nombre : ")
fac = factorial(num)
kteb("le factoriel de "+ num+" est: " + fac)
